#content-header
  = image_tag("manage_news/manage_news_logo.png")
  %h1= t('school_news')
  %h3= t('latest_announcement')
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0), 'javascript:void(0);', onclick: "history.back()"
#inner-tab-menu
  %ul
    - if permitted_to? :add,:news
      %li= link_to t('add'), controller: :news, action: :add
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  #all_news
    %table#listing{:align => "center", :cellpadding => "1", :cellspacing => "1", :width => "100%"}
      %tr.tr-head
        %td
          = t('sl_no')
        %td
          = t('title')
        %td
          = t('author')
        %td
          = t('comments')
        %td
          = t('posted')
      %tr.tr-blank
      - @news.each_with_index do |r,i|
        - @comments = r.comments
        - link_value = r.title
        %tr{:class => "tr-#{cycle('odd', 'even')}"}
          %td.col-1
            = i+1
          %td.col-3
            = link_to link_value, :controller => 'news', :action => 'view', :id => r.id
          %td.col-3
            - unless r.author.blank?
              = r.author.first_name
              = '- admin' if r.author.admin==true
            - else
              = t('user_deleted')
          %td.col-1
            = @comments.size
          %td.col-3
            = time_ago_in_words(r.created_at)
            = t('ago')
    = will_paginate @news
