#content-header
  = image_tag("HR/show_hr.png")
  %h1= t('payroll_text')
  %h3= t('add_new_category')
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0), 'javascript:void(0)', "history.back()"
#page-yield
  .box
    .bread_crumb
      = link_to "#{t('hr_text')}", :controller => "employee",:action => "hr"
      »
      \#{link_to "#{t('hr_setting')}", :controller => "employee",:action => "settings"} »
      \#{t('add_new_category')}
    - unless flash[:warn_notice].nil?
      #errorExplanation1
        %ul
          %li
            = flash[:warn_notice]
    - unless flash[:notice].nil?
      %p.flash-msg
        = flash[:notice]
    = form_for :category do |c|
      = error_messages_for 'category'
      #form-content
        .label-field-pair
          %label{:for => "category_name"}= t('category_name')
          .text-input-bg= c.text_field :name
        .label-field-pair
          %label{:for => "percentage"}= t('percentage')
          .text-input-bg= c.text_field :percentage
        .label-field-pair
          %label{:for => "percentage_of"}= t('percentage_of')
          .text-input-bg
            = select :category, :payroll_category_id, @categories.map {|cat| [cat.name, cat.id]}, :prompt =>"#{t('select')}"
        .label-radio-pair
          %label.status{:for => "status"}= t('status')
          #radio-buttons
            = c.radio_button  "status", "true", :checked => "checked"
            %label.label_for_status{:for => "add_grade_status_true"}= t('active')
            = c.radio_button  "status", "false"
            %label.label_for_status{:for => "add_grade_status_false"}= t('inactive')
        .label-checkbox
          = c.check_box :is_deduction
          = t('is_deduction')
        .extender
        #submit-button
          = submit_tag("► #{t('create_text')}")
    #category-list
      = render :partial=>"category"
