#content-header
  = image_tag("student_details/student_details_logo.jpg")
  %h1= t('student_text')
  %h3= t('advanced_search_text')
  #app-back-button
    = back_button
#page-yield
  - unless flash[:notice].nil?
    .show-msg
      .flash-msg= flash[:notice]
  #search-form
    = search_form_for @search, url: advanced_search_students_path do |f|
      .label-field-pair
        %label{:for => "name"}= t('name')
        .text-input-bg
          = f.text_field :first_name_or_middle_name_or_last_name_cont
      .label-field-pair
        %label{:for => "student_admission_no"}= t('admission_number')
        .text-input-bg
          = f.text_field :admission_no_eq
      .label-field-pair
        %label{:for => "student_course"}
          = t('course_text')
          = image_tag("loader.gif",     |
            :align => "absmiddle",      |
            :border => 0,               |
            :id => "loader",            |
            :style =>"display: none;" ) |
        .text-input-bg
          = select :advv_search, :course_id, Course.active.map{|c| ["#{c.course_name} #{c.section_name}", c.id]}, |
            {:prompt=>"#{t('select_a_course')}"},                                                             |
            {:onChange => "onChangeRequest(this, '#{url_for(action: :list_batches, course_id: 'paramid')}')"}
      #course_batches.label-field-pair
        %label{:for => "student_batch"}= t('batch')
        .text-input-bg
          = select :q,:batch_id_eq, @batches.map{|c| [c.name, c.id]},{:prompt=>"#{t('select_batch')}"}
      .label-field-pair
        %label{:for => "student_category"}= t('category')
        .text-input-bg
          = f.collection_select :student_category_id_eq,StudentCategory.active,:id,:name,{:prompt=>"#{t('select_category')}"}
      .label_field_pair
        %label.label_for_student{:for => "student_gender"}= t('gender')
        .student_gender_value
          = f.radio_button  :gender_eq, ""
          %label.label_for_gender{:for => "student_gender_true"}= t('all')
          = f.radio_button  :gender_eq, "m"
          %label.label_for_gender{:for => "student_gender_false"}= t('male')
          = f.radio_button  :gender_eq, "f"
          %label.label_for_gender{:for => "student_gender_false"}= t('female')
      .label-field-pair
        %label{:for => "student_blood_group"}= t('blood_group')
        .text-input-bg
          = select :q, :blood_group_cont, ["A+", "A-", "B+", "B-", "O+", "O-", "AB+", "AB-"],{:prompt=>"#{t('select')}"}
      .label-field-pair
        %label{:for => "student_country"}
          = t('country')
        .text-input-bg
          = f.collection_select :nationality_id_eq, Country.all,:id,:name,{:prompt=>"#{t('select')}"}
      .label-field-pair
        %label{:for => "student_grade"}= t('admission_date')
        .text-input-bg{style: 'width: 350px;'}
          = select :advv_search,:doa_option,[["#{t('equal_to')}","admission_date_eq"],["#{t('less_than')}","admission_date_lt"],["#{t('greater_than')}","admission_date_gt"]],{:prompt=>"#{t('option')}"}

          = image_tag("loader.gif",     |
            :align => "absmiddle",      |
            :border => 0,               |
            :id => "loader",            |
            :style =>"display: none;" ) |
          #doa_year
            = text_field_tag 'advv_search[doa_year]', '', class: 'datepicker'
            =# select :advv_search,:doa_year,[],{:prompt=>"#{t('select')}"}
          #doa_year_hidden
      .label-field-pair
        %label{:for => "student_birth_date"}= t('birth_date')
        .text-input-bg{style: 'width: 350px;'}
          = select :advv_search,:dob_option,[["#{t('equal_to')}","date_of_birth_eq"],["#{t('less_than')}","date_of_birth_lt"],["#{t('greater_than')}","date_of_birth_gt"]],{:prompt=>"#{t('choose_your_option')}"}
          = image_tag("loader.gif",     |
            :align => "absmiddle",      |
            :border => 0,               |
            :id => "loader",            |
            :style =>"display: none;" ) |
          #dob_year
            = text_field_tag 'advv_search[dob_year]', '', class: 'datepicker'
            =# select :advv_search,:dob_year,[],{:prompt=>"#{t('select')}"}
          #dob_year_hidden
      .label_field_pair
        %label.label_for_student{:for => "student_gender"}= t('status')
        .student_gender_value
          = f.radio_button  :is_active_eq, "true", {:checked => 'checked'}
          %label.label_for_gender{:for => "student_gender_true"}= t('present')
          = f.radio_button  :is_active_eq, "false"
          %label.label_for_gender{:for => "student_gender_false"}= t('former')
          = f.radio_button  :is_active_eq, "", {:checked => false}
          %label.label_for_gender{:for => "student_gender_false"}= t('all')
      = f.submit "#{t('search_text')}", :class=>'submit'
  - unless @students.nil?
    - @students= @students.to_a.sort_by{|s| s.first_name}
    :javascript
      Event.observe(window, 'load', function() { $('search-form').hide(); });
    #search-result
      %p= t('searched_for')
      .search-again
        = link_to "►#{t('search_again')}", {:action=>"advanced_search"}, :class => 'user_button'
        - unless @students.empty?
          = link_to "► #{t('view')} #{t('pdf_report')}",   {:action => "advanced_search_pdf", :search=> params[:search],:advv_search=>params[:advv_search],:adv_search=>params[:adv_search]}, :target => '_blank' , :class=> 'user_button'
      .extender
      .searched_for.themed_text
        = @searched_for.html_safe
      %table#listing{:align => "center", :cellpadding => "1", :cellspacing => "1", :width => "100%"}
        - unless @students.empty?
          %tr.tr-head
            %td
              = t('sl_no')
            %td
              = t('first_name')
            %td= t('batch')
            %td= t('adm_no')
          %tr.tr-blank
          - @students.each_with_index do |student, i|
            %tr{:class => "tr-#{cycle('odd', 'even')}"}
              %td.col-1= i+1
              - if  student.is_active
                %td.col-2= link_to student.full_name, :controller => 'students', :action => 'profile', :id => student.id
              - else
                %td.col-2= link_to student.full_name, :controller => 'archived_student', :action => 'profile', :id => student.id
              %td.col-2= student.batch.full_name
              %td.col-2= student.admission_no
        - else
          %tr{:class => "tr-#{cycle('odd', 'even')}"}
            %td.col-2= t('no_students_found')
      .extender
