#content-header
  = image_tag("admission/admission_page_logo.jpg")
  %h1= t('admission')
  %h3= t('previous_details')
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0),'javascript: void(0);', onclick: "history.back()"
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  = error_messages_for 'previous_data'
  = form_for :student_previous_details do |a|
    %span.span-sub-heading= t('previous_educational_details')
    %hr.sub-heading/
    #form-contents
      = a.hidden_field :student_id, :value => @student.id
      .label-field-pair
        %label= t('institution_name')
        .text-input-bg= a.text_field :institution
        .extender
      .label-field-pair
        %label= t('course_text')
        .text-input-bg= a.text_field :course
        .extender
      .label-field-pair
        %label= t('year')
        .text-input-bg= a.text_field :year
        .extender
      .label-field-pair
        %label= t('total_mark')
        .text-input-bg= a.text_field :total_mark
        .extender
      .save-proceed-button
        = link_to "â–º #{t('skip')}", {:controller => "students", :action => "admission4", :id => @student.id },:class=>'user_button'
        = submit_tag "â–º #{t('save_and_proceed')}"
  .ajax-subject
    %ul#added-subjects
      - unless @previous_subject.nil?
        - @previous_subject.each  do |p|
          %li
            .name= p.subject
            .val
              %span :
              = p.mark
            .delete= link_to_remote image_tag("  buttons/delete-new.png", :border => 0), |
                :url => {:action => "delete_previous_subject", :id => p.id},        |
                :update => "added_subjects"                                         |
    = link_to_remote "#{t('add_subject')}", :url=>{:controller=>"students",:action=>"previous_subject", :id=>@student.id}
    #subject
