= javascript_include_tag :application
#content-header
  = image_tag("examination/show_exam.png")
  %h1= t('class_designations_text')
  %h3= t('manage_class_designations')
  #app-back-button
    = back_button
#page-yield
  .course-select
    .label-field-pair
      %label{:for => "student_course"}
        = t('select_a_course')
        \:
      .text-input-bg
        = select :class_designation, :course_id, Course.active.map {|b| [b.full_name, b.id]}, { prompt: t('select_a_course')}, { onChange: "onChangeRequest(this, '#{load_class_designations_class_designations_path(course_id: 'paramid')}')"}
  #flash
  #errors
    = error_messages_for 'class_designation'
  #course_class_designations
