#content-header
  = image_tag("  examination/show_exam.png")
  %h1= t('batches_text')
  %h3= "#{t('new_elective')}"
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0), 'javascript: void(0);', onclick: "history.back()"
#inner-tab-menu
  %ul
    %li= link_to t('new_text'), new_batch_elective_group_path(@batch)
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .bread_crumb
    = link_to t('courses_text'), courses_path
    »
    \#{link_to @course.full_name, @course} »
    \#{link_to "#{t('batch')} #{@batch.name}", [@course, @batch]} »
    \#{link_to "#{t('electives')}", batch_elective_groups_path(@batch)} »
    \#{t('new_text')}
  .box
    = form_for [@batch, @elective_group] do |f|
      = f.error_messages :header_message => nil
      .label-field-pair
        .label-container
          = f.label "#{t('name')}"
        .input-container= f.text_field :name
      = submit_tag "", :value => "► #{t('save')}", :class => "submit_button"
    .extender
