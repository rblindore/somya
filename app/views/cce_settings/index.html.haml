- content_for :head do
  = stylesheet_link_tag 'exam/index.css'
#content-header
  = image_tag("examination/show_exam.png")
  %h1 CCE Settings
  %h3 Home
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0), 'javascript: void(0);', onclick: "history.back()"
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .box
    - if Settings.find_by_config_key("CCE").config_value=="1"
      .link-box
        .link-heading= link_to t("basic_settings"),:action=>'basic'
        .link-descr= t("basic_setting_descr")
      .link-box
        .link-heading= link_to t("co_scholastic_settings"),:action=>'co_scholastic'
        .link-descr= t("co_scholastic_setting_descr")
      .link-box
        .link-heading= link_to t("scholastic_settings"),:action=>'scholastic'
        .link-descr= t("scholastic_setting_descr")
    .extender
