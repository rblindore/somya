#content-header
  = link_to  image_tag("show_timetable.png"),:controller=>:timetable
  %h1= t('timetable_text')
  %h3= t('teacher_timetable')
  #app-back-button
    = link_to image_tag("buttons/back.png",:border => 0), 'javascript: void(0)', onclick: "history.back()"
#page-yield
  = form_for :timetable_entry do |s|
    .label-field-pair
      %label{:for => "timetable_entry_course_id"}= t('select_a_tte')
      = image_tag("loader.gif",     |
        :align => "absmiddle",      |
        :border => 0,               |
        :id => "loader",            |
        :style =>"display: none;" ) |
      .text-input-bg
        = select :timetable_entry, :timetable_id, @timetables.map {|c| ["#{c.start_date.strftime("%d %b %Y")} - #{c.end_date.strftime("%d %b %Y")}", c.id]},      |
          {:selected => @current.try(:id), :prompt => t('select_a_tte')},                                                                                         |
          {:onChange => "#{remote_function(:url => {:action => "update_teacher_tt"}, :with => "'timetable_id='+value",       :before => "Element.show('loader')", |
          :success => "Element.hide('loader')")}"}                                                                                                                |
  #timetable_view
    = render :partial=>"teacher_timetable"
