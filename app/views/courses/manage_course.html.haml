#content-header
  = image_tag("show_settings.png")
  %h1= t('courses_text')
  %h3= "#{t('manage_course')}"
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
    %li
      = link_to "#{t('new_text')}", new_course_path
#page-yield
  .bread_crumb
    = link_to t('configuration_text'), :controller => "configuration", :action=>"index"
    »
    \#{link_to t('courses_text'), :controller => "courses", :action => "index"} »
    \#{t('manage_course')}
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  - unless flash[:warn_notice].nil?
    #errorExplanation.errorExplanation
      = flash[:warn_notice]
  .box
    %h4{:align => "center"}= t('course_text')
    %ul#category-list
      - @courses.each do |course|
        %li{:class => "list#{cycle('odd', 'even')}"}
          .category-name= link_to course.full_name, course_path(course)
          .category-edit= link_to "#{t('edit_text')}", edit_course_path(course) if permitted_to? :edit, :courses
          .category-delete
            = link_to(t('delete_text'), course_path(course), :method => 'delete', :confirm => "#{t('delete_confirm_msg')}") if permitted_to? :destroy, :courses
    .extender
