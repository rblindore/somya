#content-header
  = image_tag("  show_finance.png")
  %h1= t('inance_monthly_report')
  %h3= t('direct_expenses')
  #app-back-button
    = link_to_function image_tag("  buttons/back.png",:border => 0), "history.back()"
#page-yield
  - expenses_total = 0
  #fees-table
    .fees-th
      .fees-table-description= t('description')
      .fees-table-expenses= t('amount')
    - @transactions_not_fees.each do |t|
      - unless t.category.is_income?
        .fees-tr
          .fees-table-description= t.title
          .fees-table-expenses= t.amount
          - expenses_total +=t.amount
    %br/
    .fees-th
      .fees-table-description= t('total_expenses')
      .fees-table-expenses= expenses_total
