= form_for :finance_transaction do |form|
  #create_user_form
    = error_messages_for 'finance_transaction', :header_message => nil
    .label-field-pair
      %label{:for => "title"}
        = t('title')
        %span.necessary-field *
        \:
      - value=""
      - value= params[:transaction][:title] if params[:transaction] and params[:transaction][:title]
      .text-field-bg
        = form.text_field :title
    .label-field-pair
      %label{:for => "description"}
        = t('description')
        \:
      .text-field-bg
        = form.text_field :description
    .label-field-pair
      %label{:for => "amount"}
        = t('amount')
        %span.necessary-field *
        \:
      .text-field-bg
        = form.text_field :amount
    .label-field-pair
      %label{:for => "amount"}
        = t('date_text')
        \:
      .text-field-bg
        / = date_select_tag 'finance_transaction[transaction_date]', @finance_transaction.transaction_date.blank? ?  I18n.l(Date.today,:format=>:default): @finance_transaction.transaction_date, :year_range => 5.years.ago..0.years.ago ,:popup=>:force
    .label-field-pair
      %label{:for => "category"}
        = t('category')
        %span.necessary-field *
        \:
      .text-input-bg= form.select 'category_id', @categories.map { |c| [c.name, c.id] },{:prompt=>t('select_a_category'), :selected=> @finance_transaction.category_id}
    = submit_tag "â–º #{t('save')}",:class=>'submit_button'
