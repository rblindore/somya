#content-header
  = image_tag("show_finance.png")
  %h1= t('transactions')
  %h3= t('monthly_transactions')
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0), 'javascript:void(0)', "history.back()"
#page-yield
  .bread_crumb
    = link_to t('finance_text'), :controller => "finance", :action=>"index"
    »
    \#{link_to "#{t('transactions')}", :controller => "finance", :action => "transactions"} »
    \#{t('monthly_transactions')}
  .box
    = form_for :report, :url => {:action => 'update_monthly_report'} do |form|
      .label-field-pair
        %label
          = t('select_start_date')
          \:
        .input-container= calendar_date_select_tag 'start_date', I18n.l(Date.today,:format=>:default) ,:popup=>:force
      .label-field-pair
        %label
          = t('select_end_date')
          \:
        .input-container= calendar_date_select_tag 'end_date', I18n.l(Date.today,:format=>:default) ,:popup=>:force
      = submit_tag "► #{t('monthly_report')}",:class=>'submit_button'
