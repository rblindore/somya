#content-header
  = image_tag("show_finance.png")
  %h1= t('fees_collection')
  %h3= t('create_fee_collection')
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0), 'javascript:void(0)', "history.back()"
#inner-tab-menu
  %ul
    %li= link_to "#{t('fees_collection')}", :action=>'fee_collection'
#page-yield
  #flash_box
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  = form_for @finance_fee_collection,                      |
    :url => {:action => 'fee_collection_create'} do |form| |
    #form-errors= error_messages_for 'finance_fee_collection'
    #left-side-inputs
      .label-field-pair
        %label{:for => "reason"}
          = t('fee_category')
          \:
        .text-input-bg
          = form.select(:fee_category_id, @fee_categories.map { |item| [item.name, item.name] },                             |
            {:selected => @fee_category.present? ? @fee_category.first.name : nil , :prompt => "#{ t('select_category')}" }, |
            {:onchange => "#{remote_function(:url => {:action => "fee_collection_batch_update"}, :with => "'id='+value")}"}) |
      .label-field-pair
        %label{:for => "reason"}
          = t('fee_collection_name')
          \:
        .text-input-bg= form.text_field :name
      .label-field-pair
        %label{:for => "reason"}
          = t('start_date')
          \:
        .text-input-bg= calendar_date_select_tag 'finance_fee_collection[start_date]', I18n.l(@finance_fee_collection.start_date || Date.today,:format=>:default),:popup=>"force"
      .label-field-pair
        %label{:for => "reason"}
          = t('end_date')
          \:
        .text-input-bg= calendar_date_select_tag 'finance_fee_collection[end_date]',I18n.l(@finance_fee_collection.end_date || Date.today,:format=>:default), :popup=>"force"
      .label-field-pair
        %label{:for => "reason"}
          = t('due_date')
          \:
        .text-input-bg= calendar_date_select_tag 'finance_fee_collection[due_date]', I18n.l(@finance_fee_collection.due_date || Date.today,:format=>:default), :popup=>"force"
    #batchs
      - unless params[:fee_collection].nil?
        = render :partial=>'fee_collection_batchs' if params[:fee_collection][:category_ids].present?
    .extender
    #submit-button
      = submit_tag "â–º #{t('create_text')}",:class=>'submit_button'
