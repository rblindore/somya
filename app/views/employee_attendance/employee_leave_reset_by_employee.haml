= stylesheet_link_tag("employee_attendance/employee_leave_reset_by_employee.css")
#content-header
  = image_tag("  HR/leave-new.png")
  %h1= t('reset_employee_leaves')
  %h3= t('reset_employee_leave_for_each_emp')
  #app-back-button
    = back_button
#inner-tab-menu
  %ul
    %li= link_to "#{t('view_all')}", :controller=>"employee_attendance", :action=>"employee_view_all"
#page-yield
  .bread_crumb
    = link_to t('hr'), :controller => "employee", :action=>"hr"
    »
    \#{link_to t('employee_leave_management'), :controller => "employee", :action => "employee_attendance"} »
    \#{link_to t('reset_leave'), :controller => "employee_attendance", :action => "manual_reset"} »
    \#{t('individual_reset')}
  #search_box_bg
    #form-content
      %form{:action => "", :name => "employee", :style => "display:inline;"}
        %label{:for => "name"}
          = t('search_text')
          = image_tag("loader.gif",      |
            :align => "absmiddle",       |
            :border => 0,                |
            :id => "loader",             |
            :style => "display: none;" ) |
        #search_textbox
          = text_field_tag("query", params['query'], :autocomplete => 'off')
          %br/
    .advanced_options
      .advanced-options-select= select :employee, :department_id, @departments.map {|s| [s.name, s.id]}, :prompt => "#{t('select_department')}"
      .advanced-options-select= select :employee, :category_id,   @categories.map {|s| [s.name, s.id]},  :prompt => "#{t('select_category')}"
      .advanced-options-select= select :employee, :position_id,   @positions.map {|s| [s.name, s.id]},   :prompt => "#{t('select_position')}"
      .advanced-options-select= select :employee, :grade_id,      @grades.map {|s| [s.name, s.id]},      :prompt => "#{t('select_grade')}"
      .extender
  :javascript
    function employee_search_ajax(){
          if ($('query').value.include("%")) return;
    #{"\#{remote_function(:url => {:action => "employee_search_ajax"},
    :with =>  "'query='+ $('query').value + '&employee_department_id='+$('employee_department_id').value + '&employee_category_id='+$('employee_category_id').value + '&employee_position_id='+$('employee_position_id').value + '&employee_grade_id='+$('employee_grade_id').value",
    :before => "Element.show('loader')",
    :success => "Element.hide('loader')",
    :update=>"information"
    )}"}
      }

      document.observe("dom:loaded", function() {
        new Form.Element.Observer('query', 1, employee_search_ajax);
        new Form.Element.Observer('employee_department_id', 0.1, employee_search_ajax);
        new Form.Element.Observer('employee_category_id', 0.1, employee_search_ajax);
        new Form.Element.Observer('employee_position_id', 0.1, employee_search_ajax);
        new Form.Element.Observer('employee_grade_id', 0.1, employee_search_ajax);
      });
  .extender
  #information
