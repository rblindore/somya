#content-header
  = image_tag("examination/show_exam.png")
  %h1= t('exams_text')
  %h3= t('combined_report')
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0),'javascript: void(0);', onclick: "history.back()"
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .bread_crumb
    = link_to t('exam_text'), exam_index_path
    »
    \#{link_to t('report_center'), report_center_exam_index_path} »
    \#{t('combined_report')}
  .box
    = form_for :combined_report, url: student_combined_report_exam_index_path do |x|
      .label-field-pair
        %label{:for => "student_course"}
          = t('select_a_batch')
          \:
        .text-input-bg
          = select :combined_report, :batch_id,                                                                                                                  |
            @batches.map {|b| [b.full_name, b.id]},                                                                                                              |
            { prompt: t('select_a_batch')},{ onChange: "#{remote_function( url: load_levels_exam_index_path(batch_id: "value"), :with => "'batch_id='+value")}"} |
      #levels
    .extender
