#content-header
  = image_tag("examination/show_exam.png")
  %h1= t('exams_text')
  %h3= t('previous_batch_exam')
  #app-back-button
    = link_to_function image_tag("buttons/back.png",:border => 0), "history.back()"
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .bread_crumb
    = link_to t('exams_text'), controller: :exam, action: :index
    »
    \#{link_to "#{t('exam_management')}", :controller => "exam", :action => "create_exam"} »
    \#{t('previous_batch_exam')}
  .box
    .label-field-pair
      %label{:for => "student_course"}
        = t('select_a_course')
        \:
        \#{image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" )}
      .text-input-bg
        = select :course, :course_id,                                                                        |
          Course.active.map {|b| [b.full_name, b.id]},                                                       |
          {:prompt => "#{t('select_a_course')}"},                                                            |
          {:onChange => "#{remote_function(:url => {:action => "list_inactive_batches", course_id: "value"}, |
          :with => "'course_id='+ value",                                                                    |
          :before => "Element.show('loader')",                                                               |
          :success => "Element.hide('loader')"                                                               |
          )}"}                                                                                               |
    #inactive_batches
    .extender
