#content-header
  = image_tag("examination/show_exam.png")
  %h1= t('exams_text')
  %h3= t('settings')
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0), 'javascript:void(0);', onclick: "history.back()"
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .box
    - if permitted_to? :index,:grading_levels
      .link-box
        .link-heading
          = link_to t('set_grading_levels'), controller: :grading_levels, action: :index
        .link-descr= t('set_grading_levels')
    - if permitted_to? :index, :ranking_levels
      .link-box
        .link-heading
          = link_to t('ranking_levels_text'), controller: :ranking_levels, action: :index
        .link-descr= t('manage_ranking_levels')
    - if permitted_to? :index,:class_designations
      .link-box
        .link-heading
          = link_to t('class_designations_text'), controller: :class_designations, action: :index
        .link-descr= t('manage_class_designations')
    - if Settings.cce_enabled?
      - if permitted_to? :index,:cce_settings
        .link-box
          .link-heading
            = link_to t('cce_sttings'), controller: :cce_settings, action: :index
          .link-descr= t('manage_cce_settings')
