#content-header
  = image_tag("edit_users/edit_users_logo.jpg")
  %h1= t('edit_user')
  %h3= t('update_user_information')
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0), 'javascript:void(0)', onclick: "history.back()"
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  - unless flash[:warn_notice].nil?
    #errorExplanation.errorExplanation
      = flash[:warn_notice]
  #changepw-form
    = form_for :user do |u|
      .box
        .label-field-pair
          .label-container
            %label
              = t('old_password')
              \:
          .input-container
            = u.password_field :old_password
        .label-field-pair
          .label-container
            %label
              = t('new_password')
              \:
          .input-container= u.password_field :new_password
        .label-field-pair
          .label-container
            %label
              = t('confirm_password')
              \:
          .input-container= u.password_field :confirm_password
        = submit_tag "â–º #{t('update')}",:class=>'submit_button'
