#content-header
  = image_tag("  attendence/attendence.png")
  %h1= t('attendance')
  %h3= t('attendance_register')
  #app-back-button
    = link_to_function image_tag("  buttons/back.png",:border => 0), "history.back()"
#page-yield
  .bread_crumb
    = link_to t('hr'), :controller => "employee", :action=>"hr"
    »
    \#{link_to t('employee_leave_management'), :controller => "employee", :action => "employee_attendance"} »
    \#{t('attendance_register')}
  .label-field-pair
    %label{:for => "employee_department_select"}= t('select_the_department')
    = image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" )
    .text-input-bg
      = select :batch, :id,                           |
        @departments.map {|b| [b.name, b.id] },       |
        {:prompt => "#{t('select_the_department')}"}, |
        {:onchange => "#{remote_function(             |
        :url => { :action => 'show' },                |
        :with => "'dept_id='+value",                  |
        :before => "Element.show('loader')",          |
        :success => "Element.hide('loader')"  )}"}    |
  #register
  #modal-box{:style => "display:none;"}
