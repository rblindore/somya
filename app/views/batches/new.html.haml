#content-header
  = image_tag("examination/show_exam.png")
  %h1= t('courses_text')
  %h3= t('new_batch')
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0),'javascript: void(0);', onclick: "history.back()"
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .box
    .bread_crumb
      = link_to "#{t('courses_text')}", courses_path
      »
      \#{link_to @course.full_name, @course} »
      \#{t('new_batch')}
    = form_for [@course, @batch] do |f|
      = f.error_messages
      .label-field-pair
        .label-container= t('name')
        .input-container= f.text_field :name
      .label-field-pair
        .label-container= t('start_date')
        .input-container= calendar_date_select_tag 'batch[start_date]',  I18n.l(Date.today,:format=>:default), :popup=>"force"
      .label-field-pair
        .label-container= t('end_date')
        .input-container= calendar_date_select_tag 'batch[end_date]',  I18n.l(Date.today + 1.year,:format=>:default), :popup=>"force"
      .label-field-pair
        .label-container1
          %label= t('import_subject')
        .input-container= check_box_tag 'import_subjects',"0",false
      .label-field-pair
        .label-container1
          %label= t('import_fees')
        .input-container= check_box_tag 'import_fees',"0",false
      = submit_tag "", :value => "► #{t('save')}", :class => "submit_button"
    .extender
