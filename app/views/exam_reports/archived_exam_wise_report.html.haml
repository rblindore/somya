#content-header
  %img{:alt => "Exam", :src => "examination/show_exam.png"}/
  %h1= t('exam_reports_text')
  %h3= t('archived_grouped_exam_reports')
  #app-back-button
    = link_to_function image_tag("buttons/back.png",:border => 0), "history.back()"
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .bread_crumb
    = link_to t('exam_text'), exam_index_path
    »
    \#{link_to t('report_center'), report_center_exam_index_path} »
    \#{t('archived_grouped_exam_reports')}
  .box
    = form_for :exam_report, url: archived_batches_exam_report_exam_reports_path do |x|
      .label-field-pair
        %label
          = t('select_a_course')
          \:#{image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" )}
        .text-input-bg
          = select :exam_report, :course_id,                                                                    |
            @courses.map {|c| [c.full_name, c.id]},                                                             |
            {prompt: t('select_a_course')},                                                                     |
            {onChange: "#{remote_function(url: list_inactivated_batches_exam_reports_path(course_id: "value") , |
            with: "'course_id='+value",                                                                         |
            before: "Element.show('loader')",                                                                   |
            success: "Element.hide('loader')"                                                                   |
            )}"}                                                                                                |
      .label-field-pair
        %label
          = t('select_a_batch')
          \:
        .text-input-bg
          #inactive_batches
            = select :exam_report, :batch_id,                                                                                           |
              @batches.map {|b| [b.full_name, b.id]},                                                                                   |
              {:prompt => "#{t('select_a_batch')}"},{:onChange => "#{remote_function(:url => {:action => "final_archived_report_type"}, |
              :with => "'batch_id='+value"                                                                                              |
              )}"}                                                                                                                      |
      #archived_report_type
      = submit_tag "", :value => "►#{t('view')}", :class => "submit_button"
    .extender
