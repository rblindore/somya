#content-header
  = image_tag("attendence/attendence.png")
  %h1= t('attendance_report')
  %h3= t('student_report')
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0),'javascript: void(0);', onclick: "history.back()"
#page-yield
  .label-field-pair
    %label
      = t('student_details')
      = @student.full_name
  %table#listing{:align => "center", :width => "80%"}
    %tr.tr-head
      %td
        = t('date_text')
      %td
        = t('status')
      %td
        = t('reason')
    %tr.blank
    - @report.each do |r|
      %tr{:class => "tr-#{cycle('odd', 'even')}"}
        %td.col-2= r.month_date.to_date
        %td.col-3
          - if @config.config_value == 'Daily'
            - if r.forenoon and r.afternoon
              = "#{t('full_day')}"
            - elsif r.afternoon
              = "#{t('afternoon')}"
            - elsif r.forenoon
              = "#{t('forenoon')}"
            - else
              = "#{t('absent')}"
          - else
            = "#{t('absent')}"
        %td.col-2
          = r.reason
