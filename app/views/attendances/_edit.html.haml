#form-errors
%label.head_label
  = t('edit_attendance_for')
  %span= @student.first_name
#ajax-edit
  %br/
  - if @config.config_value == 'Daily'
    - form_remote_for @absentee do |f|
      .label-field-pair
        %label{:for => "reason"}
          = t('reason')
        .text-input-bg= f.text_field :reason
      .label-checkbox-pair
        %label
          = f.check_box :forenoon
          = t('forenoon')
      .label-checkbox-pair
        %label
          = f.check_box :afternoon
          = t('afternoon')
      .extender
      = f.submit "► #{t('update')}", :class => 'submit-button'
    #delete-button= link_to_remote("► #{t('delete_text')}",   |
        :url => attendance_path(@absentee),       |
        :method =>'delete',                       |
        :confirm => "#{t('delete_confirm_msg')}") |
  - else
    - form_remote_for @absentee,:url=>{:controller=>"attendances",:action=>'update'} do |f|
      .label-field-pair
        %label{:for => "reason"}
          = t('reason')
        .text-input-bg= f.text_field :reason
      .extender
      = f.submit "► #{t('update')}", :class => 'submit-button'
    #delete-button= link_to_remote("► #{t('delete_text')}",   |
        :url => attendance_path(@absentee),       |
        :method =>'delete',                       |
        :confirm => "#{t('delete_confirm_msg')}") |
