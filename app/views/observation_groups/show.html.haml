#content-header
  = image_tag("  examination/show_exam.png")
  %h1 Co Scholastic Group
  %h3 Co Scholastic Criterias
  #app-back-button
    = link_to_function image_tag("  buttons/back.png",:border => 0), "history.back()"
#inner-tab-menu
  %ul
    %li= link_to_remote "#{t('new_text')}", :url => { :action => 'new_observation', :id => @obs_group.id }
#page-yield
  #flash-box
    - unless flash[:notice].nil?
      %p.flash-msg
        = flash[:notice]
  .bread_crumb
    = link_to t('observation_groups'), observation_groups_path
    »
    \#{t('observation_group')} #{@obs_group.name}
  .title
    = t("name_text")
    .description
      \:   #{@obs_group.name}
  .title
    = t("header_name")
    .description
      \:   #{@obs_group.header_name}
  .title
    = t("description_text")
    .description
      \:   #{@obs_group.desc}
  .title
    = t("grade_set")
    .description
      \:   #{@obs_group.cce_grade_set.name}
  #observations
    = render  :partial=>'observations'
  #modal-box{:style => "display:none;"}
