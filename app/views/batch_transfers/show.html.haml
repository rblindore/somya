#content-header
  = image_tag("show_settings.png")
  %h1= t('batch_transfer')
  %h3= t('transfer')
  #app-back-button
    = link_to image_tag("buttons/back.png", border: 0),'javascript: void(0);', onclick: "history.back()"
#page-yield
  - unless flash[:notice].nil?
    %p.flash-msg
      = flash[:notice]
  .transfer_batch_details
    .label-field-pair
      %label
        = t('transferring_batch')
        \:
      .text-input-bg.themed_text= @batch.full_name
  = form_for :transfer,@batch, :url => { :controller => 'batch_transfers', :action => 'transfer', :id => @batch.id } do |f|
    = error_messages_for 'batch', :header_message => nil
    .label-field-pair
      %label{:for => "subject_id"}
        = t('transfer_to')
      .text-input-bg= select :transfer, :to, @batches.map{ |b| [b.full_name, b.id] }, :prompt=>t('select_a_batch'), :id=>'transfer_to'
    %p
      = t('uncheck_message')
      \.
    %ul#category-list
      %li.listheading
        .heading-no= t('adm_no')
        .category-name= t('name')
        .sel-list
          = link_to t('all'), 'javascript: void(0);', onclick: "$('input.right').each(function(checkbox) { checkbox.checked = true; });"
          ,
          \#{link_to t('none'), 'javascript: void(0);', onclick: "$('input.right').each(function(checkbox) { checkbox.checked = false; });"}
      - @batch.students.each do |student|
        %li{:class => "list#{cycle('odd', 'even')}"}
          .category-number= student.admission_no
          .category-name= student.full_name
          .category-edit= check_box_tag 'transfer[students][]', student.id, true,:class=>"right"
    = submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button", :onclick=>"if (confirm_show()) return true; else return false;"
  .extender
:javascript
  function confirm_show()
  {
    var elt = $('transfer_to');
    if (elt.value=="")
    {
      return true
    }
    else
    {
      var text = elt.options[elt.selectedIndex].text;
      if(confirm('#{t('are_you_sure_to_trnsfer')} ' + text ))
      {
        return true
      }
      else
      {
        return false
      }
    }
  }
